<% if user_signed_in? %>
	<h5>Welcome <%=current_user.email %> <%= link_to "Sign Out", destroy_user_session_path, method: :delete %></h5>
<% else %>
	<h5><%= link_to "Login in", new_user_session_path %></h5>
<% end %>
<br>

<h1>SI Cohortions</h1>
<br>
<table id="id">
	<th>Name</th>
	<th>Last</th>
	<% if user_signed_in? %>
		<th colspan="3">Action</th>
	<% end %>
	<% @cohortion.each do |c| %>
		<tr>
			<td>
				<%= c.first %>
			</td>
			<td>
				<%= c.last %>
			</td>
			<% if user_signed_in? %>
				<td><%= link_to "Details", cohortion_path(c)%></td>
				<td><%= link_to "Edit", edit_cohortion_path(c)%></td>
			<% end %>
		</tr>
	<% end %>

</table>
<br><br>

<%= link_to "New", new_cohortion_path %>